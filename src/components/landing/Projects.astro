---
import projects from "../../config/projects.json";
---

<section>
  <h2 class="font-bold text-5xl my-5">Projects</h2>
  {
    projects.map((project) => (
      <div class="flex p-2">
        <div class="flex-1">
          <h3 class="font-bold mb-4 text-2xl my-4 uppercase">{project.project}</h3>
          <p> {project.description} </p>
          <button class="bg-indigo-500 my-3 px-3 py-2 hover:bg-indigo-400">More Info</button>
        </div>
        <div class="flex-1">
          <img src={project.image} class="w-72 m-auto" alt="Image Project" />
        </div>
      </div>
    ))
  }
</section>
